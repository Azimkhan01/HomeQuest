        <div id="filter">
            <div id="threeDot"><p id="filterBtn">Filter <i
                        class="fa-solid fa-caret-down"></i></p></div>
            <div class="filter-container">
                <!-- Property Status Filter -->
               

                <!-- Price Range Filter -->
                <div>
                    <label for="priceFilter">Price Range:</label>
                    <input type="number" id="minPrice" placeholder="Min Price">
                    <input type="number" id="maxPrice" placeholder="Max Price">
                </div>

                <!-- Property Type Filter -->
                <div>
                    <label for="propertyTypeFilter">Property Type:</label>
                    <select id="propertyTypeFilter">
                        <option value>Select Type</option>
                        <option value="Apartment">Apartment</option>
                        <option value="House">House</option>
                        <option value="Condo">Condo</option>
                        <option value="Villa">Villa</option>
                    </select>
                </div>

                <!-- Listing Type Filter -->
                <div>
                    <label for="listingTypeFilter">Listing Type:</label>
                    <select id="listingTypeFilter">
                        <option value>Select Listing Type</option>
                        <option value="For Sale">Rent</option>
                        <option value="For Rent">Sale</option>
                    </select>
                </div>

                <!-- Area Filter -->
                <div>
                    <label for="minArea">Min Area (sq ft):</label>
                    <input type="range" id="minArea" min="0" max="100000"
                        step="50" value="0" oninput="updateAreaValues()"
                        style="background-color: white;color:#00B98E">
                    <span style="color: rgba(0, 0, 0, 0.700);"
                        id="minAreaValue">0</span> sq ft

                    <label style="margin-top: 2%;" for="maxArea">Max Area (sq
                        ft):</label>
                    <input type="range" id="maxArea" min="0" max="100000"
                        step="50" value="100000" oninput="updateAreaValues()">
                    <span style="color: rgba(0, 0, 0, 0.700);"
                        id="maxAreaValue">100000</span> sq ft
                </div>

                <!-- State Filter -->
                <div>
                    <label for="stateFilter">State:</label>
                    <select id="stateFilter">
                        <option value>Select State</option>
                    </select>
                </div>


                

                <!-- Filter Button -->
                <div class="filter-button">
                    <button id="applyFilter">Filter</button>
                </div>
            </div>

