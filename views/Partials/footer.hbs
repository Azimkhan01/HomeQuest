<script>
   function handleFeedback() {
    const feedbackElement = document.getElementById('feedback');
    const feedback = feedbackElement?.value?.trim();

    if (!feedback) {
        console.error("Feedback cannot be empty.");
        return;
    }

    try {
        fetch(`${window.location.origin}/feedback`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ feedback }), // Convert the object to a JSON string
        })
        .then((response) => {
            if (response.ok) {
                console.log("Feedback submitted successfully.");
            } else {
                console.error(`Failed to submit feedback. Status: ${response.status}`);
            }
            return response.json();
        })
        .then((data) => {
            console.log("Server response:", data);
            
                feedbackElement.value = ''
        })
        .catch((error) => {
            console.error("Network error:", error);
        });
    } catch (error) {
        console.error("Unexpected error:", error);
    }
}

</script>